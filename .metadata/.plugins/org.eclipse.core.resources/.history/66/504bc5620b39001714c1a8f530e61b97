		<thead>
		<th>아이디</th>
		<th>이름</th>
		<th>설명</th>
		<th>버전</th>
		<th>전송 방식</th>
		<th>타입</th>
		<th>관리자</th>
		<th>등록날짜</th>
		<th>업데이트</th>
		<th>IP</th>		
	</thead>
