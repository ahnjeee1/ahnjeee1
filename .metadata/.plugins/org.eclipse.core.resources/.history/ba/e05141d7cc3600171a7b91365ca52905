<script>
$(function(){
	
	getSystemList();
	
	$("input[name='add']").click(function(){
		location.href="/solar/system/add";
	});

	function getSystemList(){
		$.ajax({
				type:"GET",
				url:"/solar/system/systemList",
				success:function(data,status,xhr){
					renderView(data);
				},
				async: false,
				error:function(xhr,status,error){
					console.log("error : "+xhr.status);
					alert("error : "+xhr.status);
					alert("데이터를 불러오는 데 실패하였습니다.")
				},
				contentType:"application/json",
				dataType:"json"
			});
	}
	
	function renderView(data){
		$(data).each(function(){
			var $tr = $("<tr/>").appendTo("table");
			var $td = $("<td/>").appendTo($tr);
			
			var $a = $("<a/>",{'href':"/solar/system/"+this.id}).appendTo($td);			
			$($a).text(this.unique_Id);			
			
			$td = $("<td/>").appendTo($tr);
			$($td).text(this.id);
			
			$td = $("<td/>").appendTo($tr);
			$($td).text(this.name);
			
			$td = $("<td/>").appendTo($tr);
			$($td).text(this.description);
			
			$td = $("<td/>").appendTo($tr);
			$($td).text(this.version);
			
			$td = $("<td/>").appendTo($tr);
			$($td).text(this.transmission_type);
			
			$td = $("<td/>").appendTo($tr);
			$($td).text(this.type);
			
			$td = $("<td/>").appendTo($tr);
			$($td).text(this.manager);
			
			$td = $("<td/>").appendTo($tr);
			$($td).text(this.regist_date);
			
			$td = $("<td/>").appendTo($tr);
			$($td).text(this.up_Date);
			
			$td = $("<td/>").appendTo($tr);
			$($td).text(this.ip);
			
			$td = $("<td/>").appendTo($tr);
			$("<input/>",{"type":"hidden","value":this.uniqueId}).appendTo($td);
		});
	}
});
</script>
</html>